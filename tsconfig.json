{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@components": ["./src/components"],
      "@gql/*": ["./src/gql/*"],
      "@icons": ["./src/components/Icons"],
      "@components/*": ["./src/components/*"],
      "@domains/*": ["./src/domains/*"],
      "@constants/*": ["./src/constants/*"],
      "@utils/*": ["./src/utils/*"],
      "@context/*": ["./src/context/*"],
      "@styles/*": ["./src/styles/*"],
      "@locales": ["./src/locales"],
      "@test/*": ["./src/test/*"],
      "@mocks/*": ["./mocks/*"],
      "@generalConfig": ["./src/generalConfig"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/icons/index.tss"
  ],
  "exclude": ["node_modules"]
}
